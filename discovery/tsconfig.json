{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "typedocOptions": {
    "out": "docs",
    "entryPoints": ["src/**/*"],
    "exclude": "**/*+(index|.spec|.test).ts",
    "theme": "default",
    "readme": "none",
    "sort": "source-order"
  }
}